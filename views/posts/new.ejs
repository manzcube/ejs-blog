<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Post</h1>
    <div class="col-6 offset-3">
        <form action="/posts" method="POST">
            <div class="my-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" class="form-control" id="title" name="post[title]">
            </div>

            <div class="my-3">
                <label class="form-label" for="image">Image</label>
                <input type="text" class="form-control" id="image" name="post[image]">
            </div>

            <div class="my-3">
                <label class="form-label" for="link">Investopedia link</label>
                <input type="text" class="form-control" id="link" name="post[link]">
            </div>

            <div class="my-3">
                <label class="form-label" for="type">Type</label>
                <select class="form-select" id="type" name="post[type]">
                    
                    <option value="Trading" >Trading</option>
                    <option value="Improvement">Improvement</option>
                </select>
            </div>

            <div class="my-3">
                <label class="form-label" for="date">Date</label>
                <input type="text" class="form-control" id="date" name="post[date]">
            </div>

            <div class="my-3">
                <label class="form-label" for="body">Body</label>
                <textarea type="text" class="form-control" id="body" name="post[body]"></textarea>
            </div>

            <button class="btn btn-success mb-3">Add Post</button>
        </form>
        <a href="/posts">Go to all campgrounds</a>
    </div>
</div>
    

