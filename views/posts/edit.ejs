
<% layout('layouts/boilerplate') %>
    
<div class="row">
    <h1 class="text-center">Edit Post</h1>
    <div class="col-6 offset-3">
        <form action="/posts/<%=post.id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" class="form-control" id="title" name="post[title]" value="<%=post.title%>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input type="text" class="form-control" id="image" name="post[image]" value="<%=post.image%>">
            </div>

            <div class="my-3">
                <label class="form-label" for="link">Investopedia link</label>
                <input type="text" class="form-control" id="link" name="post[link]" value="<%=post.link%>">
            </div>

            <div class="my-3">
                <label class="form-label" for="type">Type</label>
                <select class="form-select" id="type" name="post[type]">
                    
                    <option value="Trading" >Trading</option>
                    <option value="Improvement">Improvement</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" for="body">Body</label>
                <textarea type="text" class="form-control" id="body" name="post[body]"><%=post.body%></textarea>
            </div>

            <button class="btn btn-info mb-3 text-white">Update post</button>
        </form>
        <a href="/posts/<%=post.id%>">Back to post</a> 
    </div>
</div>